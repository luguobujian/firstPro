/**index.wxss**/

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}

.address {
  float: left;
  width: 132rpx;
  height: 90rpx;
  line-height: 90rpx;
  text-align: center;
}

.input-view {
  float: left;
  height: 90rpx;
  font-size: 26rpx;
  line-height: 90rpx;
}

.input-view > view {
  color: #b5b5b5;
  width: 590rpx;
  height: 58rpx;
  line-height: 58rpx;
  margin: 18rpx 0;
  background-color: #f2f2f2;
  border-radius: 8rpx;
}

.search-icon {
  float: left;
  width: 36rpx;
  height: 36rpx;
  vertical-align: middle;
  margin: 28rpx 26rpx 0;
}

.slider-view {
  width: 100%;
  overflow: hidden;
  padding: 20rpx 0 20rpx 30rpx;
  background-color: #f8f8f8;
}

.slider {
  /* height: 370rpx; */
  height: 332rpx;
}

.slider image {
  width: 690rpx;
  height: 332rpx;
  /* margin: 20rpx 0 0 30rpx; */
  border-radius: 14rpx;
}

.slider swiper-item {
  /* margin: 20rpx 0 0 30rpx; */
}

.top-view {
  height: 106rpx;
  background-color: #fff;
}

.top-logo-view {
  float: left;
}

.top-logo {
  width: 81rpx;
  height: 81rpx;
  margin-top: 16rpx;
  margin-left: 44rpx;
  margin-right: 24rpx;
}

.top-slider-view {
  float: left;
  height: 106rpx;
  width: 602rpx;
}

.top-slider {
  height: 81rpx;
  margin-top: 16rpx;
}

.top-samll-tag {
  float: left;
  color: #c00202;
  font-size: 20rpx;
  line-height: 28rpx;
  padding: 0rpx 10rpx;
  border: 1rpx solid #c00202;
  border-radius: 4rpx;
}

.top-small-tit {
  /* float: left; */
  font-size: 28rpx;
  line-height: 32rpx;
  text-indent: 20rpx;
  margin-right: 20rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.tit {
  font-size: 32rpx;
  line-height: 32rpx;
  font-weight: bold;
  padding: 42rpx 0 0;
  background: #f8f8f8;
}

.perpendicular {
  float: left;
  width: 6rpx;
  height: 34rpx;
  line-height: 34rpx;
  margin-left: 30rpx;
  margin-right: 20rpx;
  background-color: #c00202;
  border-radius: 3rpx;
}

.merchant-item {
  margin-top: 24rpx;
  background-color: #fff;
}

.merchant-logo > image {
  width: 110rpx;
  height: 110rpx;
  margin: 24rpx 30rpx;
}

.merchant-info {
  width: 560rpx;
  margin-right: 20rpx;
}

.merchant-info-tit {
  color: #282828;
  font-size: 30rpx;
  margin-top: 24rpx;
}

.merchant-info-info {
  color: #666;
  font-size: 26rpx;
  line-height: 40rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

.go-item {
  font-size: 26rpx;
  color: #c00202;
  margin-right: 30rpx;
}

.map-view {
  margin-top: 24rpx;
  margin-bottom: 38rpx;
  background-color: #f8f8f8;
}

.item-one {
  padding-bottom: 32rpx;
  background-color: #fff;
  border-bottom: 1rpx solid #dbdbdb;
}

.item-one-logo image {
  width: 146rpx;
  height: 140rpx;
  margin: 56rpx 30rpx 0 30rpx;
  border: 1rpx solid #e0e0e0;
  border-radius: 6rpx;
}

.item-one-info {
  width: 520rpx;
  margin-right: 20rpx;
}

.item-one-for {
  color: #686868;
  font-size: 22rpx;
  text-align: right;
  margin-top: 26rpx;
}

.item-one-tit {
  font-size: 28rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
}

.item-one-add, .item-one-call {
  color: #686868;
  font-size: 22rpx;
  line-height: 44rpx;
}

.item-one-sale {
  color: #ff8127;
  font-size: 18rpx;
  margin-bottom: 42rpx;
}

.item-one-sale view {
  font-size: 16rpx;
  line-height: 18rpx;
  padding: 4rpx;
  margin-right: 16rpx;
  border: 1rpx solid #ff8127;
  border-radius: 6rpx;
}

.item-one-btn {
  width: 198rpx;
  height: 54rpx;
  font-size: 28rpx;
  text-align: center;
  line-height: 54rpx;
  color: #fff;
  background-color: #c00202;
  border-radius: 8rpx;
}

.down {
  height: 86rpx;
  line-height: 86rpx;
  text-align: center;
  background: #fff;
  margin-bottom: 20rpx;
}
